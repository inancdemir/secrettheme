{%- style -%}
.section-{{ section.id }}.hero-slideshow {
    min-height: {{ section.settings.section_height }}vh;
    max-height: {{ section.settings.section_height }}vh;   
    overflow: hidden;
    position: relative;
}



.section-{{ section.id }} .super {
    color: {{ section.settings.super_color }};
    font-size: {{ section.settings.super_font_size }}vw;
    line-height: {{ section.settings.super_font_size }}vw;
    {% if section.settings.super_opacity == 100 %}
        opacity: 1;
    {% else %}
        opacity: 0.{{ section.settings.super_opacity }};
    {% endif %}
    position: absolute;
    display: inline-flex;
    justify-content: center;
    font-weight: 900;
    z-index: 1;
    left: 0;
    bottom: 0;
    right: 0;
    margin-bottom: {{ section.settings.super_gap_mobile }}px;
  }
@media only screen and (min-width: 640px) {
  .section-{{ section.id }} .super {
    margin-bottom: {{ section.settings.super_gap }}px;
  }
}
.section-{{ section.id }} .hero-carousel-{{- section.id -}} {
  height: {{ section.settings.section_height }}vh;
}
.section-{{ section.id }} .slider-item {
    width: 100%;
    position: relative;
    height: {{ section.settings.section_height }}vh;
}
.section-{{ section.id }} .slider-item img.slide-image {
    object-fit: cover;
    min-width: 100%;
    width: 100%;
    height: 100%;
}
.section-{{ section.id }} .slider-item video {
  object-fit: cover;
  min-width: 100%;
  width: 100%;
  height: 100%;
}
.section-{{ section.id }} .slider-item img.slide-image.demo-image {
    object-fit: contain;
    height: 100%;
}

.section-{{ section.id }} .text-on-hero {
  position: absolute;
  z-index: 3;
  max-width: {{ section.settings.section_width }}px;
  padding: {{ section.settings.gap_from_sides }}px;
}

.section-{{ section.id }} .text-on-hero.top-left {
    top: 0;
    left: 0;
    text-align: left;
}
.section-{{ section.id }} .text-on-hero.top-center {
    top: 0;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;
}
.section-{{ section.id }} .text-on-hero.top-right {
    top: 0;
    right: 0;
    text-align: right;
}
.section-{{ section.id }} .text-on-hero.mid-left {
    left: 0;
    top: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
}
.section-{{ section.id }} .text-on-hero.mid-center {
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    margin: auto;
}
.section-{{ section.id }} .text-on-hero.mid-right {
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: right;
}
.section-{{ section.id }} .text-on-hero.bottom-left {
    bottom: 0;
    left: 0;
    text-align: left;
}
.section-{{ section.id }} .text-on-hero.bottom-center {
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;
}
.section-{{ section.id }} .text-on-hero.bottom-right {
    bottom: 0;
    right: 0;
    text-align: right;
}
.section-{{ section.id }} .text-on-hero .button-area {
    margin: 20px 0;
}
.section-{{ section.id }} .text-on-hero p {
    color: {{ section.settings.body_color }};
}
.section-{{ section.id }} .text-on-hero h2 {
    color: {{ section.settings.heading_color }};
    margin-bottom: 16px;
}
.section-{{ section.id }} .text-on-hero .h4 {
    color: {{ section.settings.sub_heading_color }};
}

.section-{{ section.id }} .flickity-button-icon {
    fill: {{ section.settings.sub_heading_color }} !important;
}
.section-{{ section.id }} .flickity-prev-next-button {
    top: auto;
    bottom: 0;
    margin-bottom: 0px;
}
.section-{{ section.id }} .flickity-prev-next-button.next {
    right: 0;
    margin-right: 32px;
}
.section-{{ section.id }} .flickity-prev-next-button.previous {
    left: 0;
    margin-left: 32px;
}

.section-{{ section.id }} .overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
}
.slider-item .subheadline,
.slider-item h2,
.slider-item .h4,
.slider-item .button-area {
  position: relative;
  opacity: 0;
  -webkit-animation-fill-mode: forwards;
          animation-fill-mode: forwards;
}
.slider-item.is-selected .subheadline,
.slider-item.is-selected h2 {
  -webkit-animation-duration: 0.4s;
          animation-duration: 0.4s;
  -webkit-animation-delay: 0.7s;
          animation-delay: 0.7s;
  -webkit-animation-name: slide-up;
          animation-name: slide-up;
  -webkit-animation-fill-mode: backwards;
          animation-fill-mode: backwards;
  opacity: 1;
}
.slider-item.is-selected .h4,
.slider-item.is-selected .button-area {
  -webkit-animation-duration: 0.4s;
          animation-duration: 0.4s;
  -webkit-animation-delay: 0.7s;
          animation-delay: 0.7s;
  -webkit-animation-name: slide-down;
          animation-name: slide-down;
}
.slider-item.is-selected .divider {
  display: inline-block;
  position: relative;
  margin: 5px auto;
  height: 2px;
  width: 60%;
  background-color: #ffffff;
  -webkit-animation: divider-mask 1s 0.3s both;
          animation: divider-mask 1s 0.3s both;
}

@-webkit-keyframes slide-up {
  0% {
    opacity: 0;
    -webkit-transform: translateY(100%);
  }
  100% {
    opacity: 1;
    -webkit-transform: translateY(0);
  }
}
@keyframes slide-up {
  0% {
    opacity: 0;
    transform: translateY(100%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
@-webkit-keyframes slide-down {
  0% {
    opacity: 0;
    -webkit-transform: translateY(-100%);
  }
  100% {
    opacity: 1;
    -webkit-transform: translateY(0);
  }
}
@keyframes slide-down {
  0% {
    opacity: 0;
    transform: translateY(-100%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
@-webkit-keyframes divider-mask {
  0%, 100% {
    transform: scaleX(0);
  }
  40%, 60% {
    -webkit-transform: scaleX(1);
  }
}
@keyframes divider-mask {
  0%, 100% {
    transform: scaleX(0);
  }
  40%, 60% {
    transform: scaleX(1);
  }
}


{%- endstyle -%}
{{ 'flickity.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flickity.js' | asset_url }}" defer></script>
<div class=" section-{{ section.id }} hero-slideshow {% unless section.settings.animation_onof %}animation-fadeIn{% endunless %}">
    <div class="hero-carousel-{{- section.id -}}">
        <h1 class="super">{{ section.settings.super }}</h1>
        {%- for block in section.blocks -%}
            {% case block.type %}
                {%- when 'hero_slide' -%}
                  <div class="slider-item" {{ block.shopify_attributes }}>
                    {%- if block.settings.video -%}
                    {{ block.settings.video
                      | video_tag:
                        image_size: '1100x',
                        autoplay: true,
                        controls: false,
                        loop: true,
                        muted: true
                    }} 
                    {%- else -%}                   
                      {% if block.settings.slide_bg %}
                      {{ block.settings.slide_bg | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'slide-image' }}
                      {% else %}
                      {{ 'lifestyle-1' | placeholder_svg_tag: 'demo-image slide-image' }}
                      {% endif %}
                    {% endif %}
                    <div class="overlay" style="background-color: {{ block.settings.overlay_color }};
                      {% if block.settings.overlay_color_opacity == 100 %}
                            opacity: 1;
                      {% else %}
                          opacity: 0.{{ block.settings.overlay_color_opacity }};
                      {% endif %}"></div>
                    <div class="text-on-hero {{ section.settings.text_position }}">
                        <div class="mask">
                          <span class="subheadline">{{ block.settings.description }}</span>
                          <h2 class="small">{{ block.settings.heading }}</h2>
                        </div>
                        <div class="divider"></div>
                        <div class="mask">
                          <span class="h4 small ">{{ block.settings.sub_heading }}</span>
                          <div class="button-area">
                              <a href="{{ block.settings.button_url }}" class="button {{ block.settings.button_style }}">{{ block.settings.button_text }}</a>
                          </div>
                        </div>
                    </div> 
                  </div>
            {%- endcase -%}
        {%- endfor -%}
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var flkty = new Flickity('.hero-carousel-{{- section.id -}}', {
            // Options
            cellAlign: 'left',       // Align the first slide to the left
            prevNextButtons: true,   // Show previous and next buttons
            pageDots: false,         // Hide the page dots
            groupCells: 1,  
            cellSelector: '.slider-item',
            setGallerySize: false
        });
    });
    {%- if request.design_mode -%}
        document.addEventListener("shopify:section:load", function() {
            var flkty = new Flickity('.hero-carousel-{{- section.id -}}', {
                // Options
                cellAlign: 'left',       // Align the first slide to the left
                contain: true,           // Contain the slides within the carousel
                prevNextButtons: true,   // Show previous and next buttons
                pageDots: false,         // Hide the page dots
                groupCells: 1,           // Show only 1 slide at a time
                cellSelector: '.slider-item',         
            });
        });
    {%- endif -%}
</script>
