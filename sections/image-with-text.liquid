{%- style -%}
.image-with-text.section-{{ section.id }} {
    display: block;
    align-items: center;
    background-color: {{ section.settings.section_bg }};
    margin: 0 auto;
    max-width:  {{ section.settings.max_width }}%;
    {% unless section.settings.full_width %}
      max-width: 1440px;
      margin-left: auto;
      margin-right: auto;
    {% endunless %}
}
.image-with-text.section-{{ section.id }} .image-side {
  line-height: 0;
}
.image-with-text.section-{{ section.id }} .image-side img {
    width: 100%;
    height: auto;
}
.image-with-text.section-{{ section.id }} .image-side img.demo-image {
    max-height: 430px;
    min-height: 430px;
}
.image-with-text.section-{{ section.id }} .text-side {
  padding: {{ section.settings.text_width }}%;
  row-gap: 16px;
  flex-direction: column;
  display: flex;
}

.image-with-text.section-{{ section.id }}.image-on-left {
}
.image-with-text.section-{{ section.id }}.image-on-right .image-side {
    order: 2
}
@media only screen and (min-width: 640px) {
  .image-with-text.section-{{ section.id }} {
      display: flex;  
  }
  .image-with-text.section-{{ section.id }} .image-side {
      min-width: {{ section.settings.image_size }}%;
      max-width: {{ section.settings.image_size }}%;
  }
}

{%- endstyle -%}

<div class="image-with-text section-{{ section.id }} {{ section.settings.image_position }}">
    <div class="image-side">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy' }}
      {% else if %}
        {{ 'collection-4' | placeholder_svg_tag: 'demo-image ' }}
      {% endif %} 
    </div>
    <div class="text-side {{ section.settings.text_align }}">
        {% if section.blocks != empty %}
          {%- for block in section.blocks -%}
            {% case block.type %}
                {%- when 'heading' -%}
                <h3 class="{{ section.settings.heading_font_size }}" {{ block.shopify_attributes }}>
                    {{ block.settings.heading }}
                </h2>
                {%- when 'text' -%}
                <div class="text-area" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                </div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                      <a
                      {% if block.settings.button_link == blank %}
                          role="link" aria-disabled="true"
                      {% else %}
                          href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button media-text text-link"
                      {{ block.shopify_attributes }}
                      >
                      {{ block.settings.button_label | escape }} {% render "icon-right-arrow" %}
                      </a>
                  {%- endif -%}
              {%- endcase -%}
          {%- endfor -%}
        {% else %}
          <h2 class="{{ section.settings.heading_font_size }}">Image with text</h2>
          <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
            <p>Use this space to tell your customers about your brand. Describe a product, share news, or greet visitors to your store.</p>
          </div>
          <a href="#">Read more</a>          
        {% endif %}
        
    </div>
</div>
{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "range",
      "id": "image_size",
      "min": 20,
      "max": 80,
      "step": 1,
      "unit": "%",
      "label": "t:sections.all.img_size",
      "default": 50
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 50,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.all.section_width",
      "default": 100
    },
    {
      "type": "range",
      "id": "text_width",
      "min": 0,
      "max": 40,
      "step": 1,
      "unit": "%",
      "label": "t:sections.all.text_gap_sides",
      "default": 5
    },
    {
      "type": "select",
      "id": "heading_font_size",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.small"
        },
        {
          "value": "medium",
          "label": "t:sections.all.medium"
        },
        {
          "value": "large",
          "label": "t:sections.all.large"
        }
      ],
      "label": "t:sections.all.heading_font_size",
      "default": "large"
    },
    {
      "type": "select",
      "id": "image_position",
      "options": [
        {
          "value": "image-on-left",
          "label": "t:sections.all.left"
        },
        {
          "value": "image-on-right",
          "label": "t:sections.all.right"
        }
      ],
      "default": "image-on-left",
      "label": "t:sections.all.image_position"
    },
    {
      "type": "select",
      "id": "text_align",
      "options": [
        {
          "value": "text-left",
          "label": "t:sections.all.left"
        },
        {
          "value": "text-center",
          "label": "t:sections.all.center"
        },
        {
          "value": "text-right",
          "label": "t:sections.all.right"
        }
      ],
      "default": "text-left",
      "label": "Text align"
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "t:sections.all.background_color"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.all.make_section_full",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Use this space to tell your customers about your brand. Describe a product, share news, or greet visitors to your store.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}