                {{ media | external_video_tag }}
              </li>
            {% when 'video' %}
              <li class="image-list-item">
                {{ media | video_tag: controls: true }}
              </li>
            {% when 'model' %}
              <li class="image-list-item">
                {{ media | model_viewer_tag }}
              </li>
            {% else %}
              <li class="image-list-item">
                {{ media | media_tag }}
              </li>
          {% endcase %}
        {% endfor %}
