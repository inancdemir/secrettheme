{%- style -%}
.login-page {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.24);
}
.login-left {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
  bottom: 0;
}
.login-left .demo-image {
  height: 100%;
}
.login-right {
  width: 100%;
  padding-top: 240px;
}

.form-area {
  max-width: 664px;
  padding: 32px;
  margin: 16px;
  display: flex;
  flex-direction: column;
  row-gap: 16px;
  background-color: #fff;
}
.form-area .rise-input {
  border: 1px solid #CBCBCB;
  font-size: 16px;
  font-weight: 400;
  line-height: 26px;
  letter-spacing: 0px;
  padding: 13px 16px;
  width: 100%;
  margin-bottom: 32px;
}
.form-area .before-submit,
.create-account {
  margin-bottom: 16px;
}
.create-account * {
  margin-left: 6px;
}
.login-tab {
  display: none
}
.login-tab.active {
  display: block;
}
@media only screen and (min-width: 768px) {
  .login-left {
    position: relative;
  }
  .login-right {
    padding-top: 0;
  }
  .form-area {
    margin: auto;
  }
}
{%- endstyle -%}

<div class="login-page">
  <div class="login-left">
    {% if section.settings.image %}
      {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'demo-image' }}
    {% else if %}
      {{ 'collection-4' | placeholder_svg_tag: 'demo-image ' }}
    {% endif %} 
  </div>
  <div class="login-right">
    <div class="form-area">
      <div class="login-tab active" id="login-tab">
        <h2 class="large">{{ section.settings.form_title }}</h2>
        {%- form 'customer_login' -%}
          {{ form.errors | default_errors }}
          <div class="create-account">Donâ€™t have an account yet?<span class="underline text-link">{{ 'Create Account' | customer_register_link }}</span></div>
          <div>
            <input type="email"
              name="customer[email]"
              id="customerEmail"
              autocorrect="off"
              autocapitalize="off"
              placeholder="Your username or email"
              class="rise-input"
              autocomplete="email">
          </div>
          <div>
            <input type="password"
              name="customer[password]"
              placeholder="Password"
              class="rise-input"
              id="customerPassword">
          </div>
          <div class="before-submit text-link text-right">
            <a href="#recover" class="underline forgot-password" data-tab="recover">Forgot your password?</a>
          </div>
          <input type="submit" value="{{ section.settings.button_text }}" class="button {{ section.settings.button_style }} full" />        
        {%- endform -%}
      </div>
      <div class="login-tab" id="recover-tab">
        <h2 class="large">{{ section.settings.form_title_forget }}</h2>
        {%- form 'recover_customer_password' -%}
      
          {%- if form.posted_successfully? -%}
            <div role="status">
              <p>We've sent you an email with a link to update your password.</p>
            </div>
          {%- endif -%}
        
          <div id="recover"{% unless form.errors %} style="display: none;"{% endunless %}>
            <p>We will send you an email to reset your password.</p>
          </div>
          <div>
            {{ form.errors | default_errors }}
          </div>
          
          <div class="create-account">Back to<a href="#login" class="underline text-link" data-tab="login">Log in</a></div>
          
          <div>
            <label for="customerEmail">Email Address</label>
            <input type="email"
              name="email"
              id="customerEmail"
              autocorrect="off"
              autocapitalize="off"
              class="rise-input"
              autocomplete="email">
          </div>
          <div>
            <input type="submit" value="SUBMIT" class="button {{ section.settings.button_style }} full">
          </div>
        
        {%- endform -%}
      </div>
      
      
      <!-- If accounts are set as optional, the following will be shown as an option when coming from checkout, not on the default /login page. -->
      {%- if shop.checkout.guest_login -%}
        {%- form 'guest_login' -%}
          <input type="submit" value="Continue as Guest" />
        {%- endform -%}
      {%- endif -%}      
      
    </div>
  </div>
</div>

  <script>
    // Select all the links with data-tab attribute
    const tabLinks = document.querySelectorAll('[data-tab]'); 
    const tabs = document.querySelectorAll('.login-tab');
  
    tabLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault(); // Prevent the default behavior of the anchor tag
        const tabId = link.getAttribute('data-tab');
  
        // Remove the "active" class from all tabs
        tabs.forEach((tab) => {
          tab.classList.remove('active');
        });
  
        // Add the "active" class to the selected tab
        document.getElementById(tabId + '-tab').classList.add('active');
      });
    });
  </script>
{% schema %}
